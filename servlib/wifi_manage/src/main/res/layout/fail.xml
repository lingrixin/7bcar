<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wifi_error_bg"
    android:padding="40dp" >
    
    <TextView 
        android:id="@+id/close"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/collector_cha"
    	android:layout_alignParentRight="true"/>
    
    <RelativeLayout 
         android:layout_width="wrap_content"
    	 android:layout_height="wrap_content"
    	 android:layout_centerInParent="true">
    	 
        <ImageView 
            android:id="@+id/wifi_error"
            android:layout_width="wrap_content"
    	 	android:layout_height="wrap_content"
    	 	android:layout_centerHorizontal="true"
    	 	android:src="@drawable/wifi_error"/>
        
        <TextView 
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
    	 	android:layout_height="wrap_content"
    	 	android:layout_below="@+id/wifi_error"
    	 	android:layout_marginTop="20dp"
    	 	android:layout_centerHorizontal="true"
    	 	android:text="wifi连接失败,请重新尝试!"
    	 	android:textColor="#FFB937"
    	 	android:textSize="23sp"/>
        
    </RelativeLayout>

</RelativeLayout>