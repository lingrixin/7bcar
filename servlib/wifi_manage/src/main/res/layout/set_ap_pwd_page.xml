<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="592px"
        android:layout_height="371px"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/relativeLayout20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="56px">

            <TextView
                android:id="@+id/textView60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="wifi_name"
                android:textColor="@android:color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pass_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout20"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="24px"
            android:background="@drawable/wifi_pass_background"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入密码"
                android:textSize="30sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64px"
                android:gravity="center"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="0dp"
                    android:layout_height="36px"
                    android:layout_marginLeft="12px"
                    android:layout_weight="5"
                    android:background="@null"
                    android:ems="10"
                    android:hint="输入密码"
                    android:imeOptions="flagNoExtractUi"
                    android:inputType="textPassword"
                    android:textSize="28sp">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/iv_eyes"
                    android:layout_width="50px"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18px"
                    android:scaleType="centerInside"
                    android:src="@drawable/selector_activation_password_eye_wifi" />
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="64px"
            android:layout_below="@+id/pass_layout"
            android:layout_marginLeft="32px"
            android:layout_marginRight="32px"
            android:layout_marginTop="48px">

            <Button
                android:id="@+id/button12"
                android:layout_width="236px"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="28px"
                android:background="@drawable/btn_common_blacken"
                android:text="取消"
                android:textColor="@drawable/btn_myfamily_font_pop_qx"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="236px"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="28px"
                android:background="@drawable/btn_common_disenable"
                android:enabled="false"
                android:text="确认"
                android:textColor="@drawable/btn_myfamily_font_pop_sure"
                android:textSize="30sp" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
